{
  "build": {
    "appId": "Agent.Analytics.TOTVS",
    "productName": "TOTVS Agent Analytics",
    "files": [
      "dist/TOTVS-Agent-Analytics/*",
      "dist/TOTVS-Agent-Analytics/src-angular/**/*",
      "dist/TOTVS-Agent-Analytics/src-electron/**/*",
      "dist/TOTVS-Agent-Analytics/icons/**/*",
      "dist/TOTVS-Agent-Analytics/i18n/**/*",
      "!dist/TOTVS-Agent-Analytics/assets/dbDevelopment.json",
      "!dist/TOTVS-Agent-Analytics/assets/db.json"
    ],
    "extraFiles": [
      "java",
      "icons"
    ],
    "directories": {
      "output": "release-builds",
      "buildResources": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "assets/*",
      "logs/*"
    ],
    "win": {
      "icon": "icons/windows/analytics.ico",
      "target": [
        "nsis"
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "icons/linux/analytics.png",
      "target": [
        "deb"
      ],
      "publish": [
        "github"
      ]
    },
    "mac": {
      "icon": "icons/linux/analytics.png",
      "target": [
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "warningsAsErrors": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "oneClick": false,
      "perMachine": true,
      "include": "./installers/installer.nsh"
    }
  },
  "name": "TOTVS-Agent-Analytics",
  "version": "1.0.0",
  "author": "Diego Matos Guedes <suporte.gd@totvs.com.br> (https://www.totvs.com/)",
  "description": "Programa de envio de dados para a plataforma GoodData.",
  "main": "./dist/TOTVS-Agent-Analytics/app.js",
  "type": "commonjs",
  "scripts": {
    "start": "ng build --configuration production && ./node_modules/.bin/tsc && electron dist/TOTVS-Agent-Analytics/app.js --trace-warnings",
    "angular": "ng serve",
    "build-angular": "ng build --configuration production",
    "build-electron": "./node_modules/.bin/tsc",
    "build-electron-w": "./node_modules/.bin/tsc -w",
    "electron": "electron --no-sandbox dist/TOTVS-Agent-Analytics/app.js --trace-warnings",
    "json-server": "json-server --watch ./assets/dbDevelopment.json",
    "github": "git add . && timestamp=$(date \"+%Y-%m-%d %H:%M:%S\") && git commit -m \"Build $timestamp\" && git push",
    "release-windows-64": "electron-builder build --win --x64",
    "release-windows-64-p": "electron-builder build --win --x64 --publish always",
    "release-windows-32": "electron-builder build --win --x86",
    "release-windows-32-p": "electron-builder build --win --x86 --publish always",
    "release-linux": "electron-builder build --linux --x64",
    "release-linux-p": "electron-builder build --linux --x64 --publish always",
    "release-mac": "electron-builder build --mac --x64",
    "release-mac-p": "electron-builder build --mac --x64 --publish always"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "15.1.3",
    "@angular/common": "15.1.3",
    "@angular/core": "15.1.3",
    "@angular/forms": "15.1.3",
    "@angular/platform-browser": "15.1.3",
    "@angular/platform-browser-dynamic": "15.1.3",
    "@angular/platform-server": "15.1.3",
    "@angular/router": "15.1.3",
    "@electron/remote": "^2.0.9",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^7.0.0",
    "@po-ui/ng-components": "^15.8.0",
    "@progress/kendo-theme-default": "^6.3.0",
    "@totvs/po-theme": "^15.8.0",
    "@totvs/thf-theme-kendo": "^4.0.1",
    "arc4": "^3.4.0",
    "auto-launch": "^5.0.6",
    "core-js": "^2.5.4",
    "electron-log": "^5.0.0-beta.24",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.3.0",
    "fs-extra": "^11.1.1",
    "ngx-electronyzer": "^1.0.0",
    "path": "^0.12.7",
    "public-ip": "^6.0.1",
    "rxjs": "~7.5.5",
    "tslib": "^2.5.2",
    "uuid-v4": "^0.1.0",
    "uuidv4": "^6.2.13",
    "winreg": "^1.2.4",
    "winston": "^3.8.2",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.8",
    "@angular/cli": "15.1.4",
    "@angular/compiler": "^15.1.3",
    "@angular/compiler-cli": "15.1.3",
    "@angular/language-service": "15.1.3",
    "@types/electron": "^1.6.10",
    "@types/node": "^18.16.13",
    "codelyzer": "^6.0.0",
    "electron": "^22.3.10",
    "electron-builder": "^23.6.0",
    "json-server": "^0.17.3",
    "ngx-electronify": "^2.0.1",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "4.9.5"
  }
}
